{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>S'enregistrer</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: "Mot de passe"
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: "Accepter les conditions d'utilisation de vos données personnelles"
        }) }}
        <a href="{{ path('app_rgpd') }}">Réglementation Générale de la Protection des Données</a>
        <br>
        <button type="submit" class="btn">S'enregistrer</button>
    {{ form_end(registrationForm) }}
{% endblock %}
